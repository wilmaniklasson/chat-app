{
	"compilerOptions": {
	  "target": "ES2022",
	  "lib": ["ES2022"],
	  "module": "ESNext",
	  "skipLibCheck": true,

	  /* Bundler mode */
	  "moduleResolution": "bundler",
	  "isolatedModules": true,
	  "moduleDetection": "force",
	  "noEmit": false,
	  "outDir": "./backendDist/",

	  /* Linting */
	  "strict": true,
	  "noUnusedLocals": true,
	  "noUnusedParameters": true,
	  "noFallthroughCasesInSwitch": true
	},
	"include": ["backendSrc"]
  }